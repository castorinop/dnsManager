	<div id="newzone" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h3 id="myModalLabel">New Zone</h3>
		</div>
		<form class="form-horizontal" action="{{ path('dns_manager_zone_create') }}" method="post" {{ form_enctype(form) }}>
		<div class="modal-body">			
				{{ form_widget(form) }}
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<button class="btn btn-primary">Save changes</button>
		</div>
		</form>
	</div>
	
	<div id="importzone" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
				<h3 id="myModalLabel">Import Zone</h3>
		</div>
		<form class="form-horizontal" action="{{ path('dns_manager_zone_import') }}" method="post" {{ form_enctype(import) }}>
		<div class="modal-body">			
				{{ form_widget(import) }}
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<button class="btn btn-primary">Import</button>
		</div>
		</form>
	</div>

<div class="container" id="list">
{% include 'dnsManagerBundle:Zone:list.html.twig' %}
</div>

{% endblock %}