{% extends 'ToaTwitterBootstrapBundle::layout.html.twig' %}
{% block title %} Zones {% endblock %}
{% block content %}
<div class="container">
	<h2 class="pull-left">Zones</h2>
	<form class="form-search pull-right" method="post">
{# 			<div class="input-prepend">#}
				<a class="btn" href="#newzone" title="Create Zone" data-toggle="modal"><i class="icon-plus"></i></a>
