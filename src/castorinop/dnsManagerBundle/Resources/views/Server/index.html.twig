{% extends 'ToaTwitterBootstrapBundle::layout.html.twig' %}
{% block title %} Servers {% endblock %}
{% block content %}
<div class="container">
	<h2 class="pull-left">Servers</h2>
	<form class="form-search pull-right" method="post">
			<div class="input-prepend">
				<a class="btn" href="#newzone" title="New Server" data-toggle="modal"><i class="icon-plus"></i></a>
				</div>
				<input type="text" id="search" name="search" value='' autocomplete="off" placeholder="Buscar" data-remote="{{ path('dns_manager_zone_search') }}">
				<div class="input-append">
		    <button type="submit" class="btn"><i class="icon-search"></i></button>
		    </div>
	</form>
</div>

	<div id="newzone" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h3 id="myModalLabel">New Zone</h3>
		</div>
		<form class="form-horizontal" action="{{ path('dns_manager_server_create') }}" method="post" {{ form_enctype(form) }}>
		<div class="modal-body">			
				{{ form_widget(form) }}
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
			<button class="btn btn-primary">Save changes</button>
		</div>
		</form>
	</div>
<div class="accordion" id="list">
{% include 'dnsManagerBundle:Server:list.html.twig' %}
</div>

{% endblock %}